@model IEnumerable<StartupProject_Asp.NetCore_PostGRE.Data.Models.AppData.Order>

@{
	ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

<meta name="datatable-url" content="@Url.Action("DatatableAjax", "OrderApi")" />
<meta name="view-url" content="@Url.Action("Details", "Orders", new { id = "0" })" />
<meta name="delete-url" content="@Url.Action("Delete", "Orders", new { id = "0" })" />

<table id="all-order-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Customer)</th>
			<th>@Html.DisplayNameFor(model => model.OrderType)</th>
			<th>@Html.DisplayNameFor(model => model.OrderTotal)</th>
			<th>@Html.DisplayNameFor(model => model.IsApproved)</th>
			<th>@Html.DisplayNameFor(model => model.IsPaid)</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>