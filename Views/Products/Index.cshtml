@model IEnumerable<StartupProject_Asp.NetCore_PostGRE.Data.Models.AppData.Product>

@{
	ViewData["Title"] = "List All Products";
}

<h1>List All Products</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>

<meta name="datatable-url" content="@Url.Action("DatatableAjax", "ProductApi")" />
<meta name="view-url" content="@Url.Action("Details", "Products", new { id = "0" })" />
<meta name="edit-url" content="@Url.Action("Edit", "Products", new { id = "0" })" />
<meta name="delete-url" content="@Url.Action("Delete", "Products", new { id = "0" })" />

<table id="all-products-datatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(model => model.Name)</th>
			<th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody></tbody>
</table>